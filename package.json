{
  "name": "pcb-offline",
  "private": true,
  "version": "0.0.0",
  "description": "Offline PCB Gerber viewer + SVG export + direct G-code + camera + serial",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k -n VITE,ELECTRON -c blue,green \"vite\" \"npm:dev:electron\"",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build": "vite build && node scripts/copy-vendor.mjs && electron-builder",
    "postinstall": "node scripts/copy-vendor.mjs",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.example.pcboffline",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/vendor/**/*",
      "package.json"
    ],
    "extraResources": [],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "density-clustering": "^1.3.0",
    "electron-updater": "^6.6.2",
    "gerber-parser": "^4.2.7",
    "gerber-to-svg": "^4.2.8",
    "jszip": "^3.10.1",
    "pcb-stackup": "^4.2.8",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "serialport": "^13.0.0",
    "whats-that-gerber": "^4.2.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "vite": "^7.1.5",
    "wait-on": "^8.0.4"
  }
}
